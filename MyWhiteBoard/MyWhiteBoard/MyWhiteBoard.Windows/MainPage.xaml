            </GridView.ItemsPanel>
            <GridView.GroupStyle>
                <GroupStyle HeaderTemplate="{StaticResource HeaderDataTemplate}">
                    
                </GroupStyle>
            </GridView.GroupStyle>
        </GridView> -->
    </Grid>
</common:LayoutAwarePage>
