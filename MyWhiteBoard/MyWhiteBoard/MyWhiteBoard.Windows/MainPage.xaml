                    x:Name="TasksGridView"
                    HorizontalAlignment="Center"
                  Grid.ColumnSpan="3"
                  Margin="5"
                  Grid.Row="1"
                  ItemTemplate="{StaticResource TaskTemplate}"
                  ShowsScrollingPlaceholders="False"
                  SelectionMode="None"
                  ItemsSource="{Binding Source={StaticResource ItemsSource}}"
                  DragItemsStarting="GridView_DragItemsStarting"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  AllowDrop="True" 
                  CanReorderItems="True"
                  CanDragItems="True" Drop="GridView_Drop" ContainerContentChanging="GridView_ContainerContentChanging">
